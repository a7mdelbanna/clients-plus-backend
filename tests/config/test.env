# Test Environment Variables
NODE_ENV=test

# Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5432/clients_plus_test
DATABASE_TEST_URL=postgresql://test:test@localhost:5432/clients_plus_test_integration
TEST_DATABASE_RESET=true

# JWT Configuration
JWT_SECRET=test-jwt-secret-for-testing-only-not-production-use-long-enough-to-be-secure
JWT_REFRESH_SECRET=test-jwt-refresh-secret-for-testing-only-not-production-use-long-enough
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=4
SESSION_SECRET=test-session-secret-for-testing-only
ENCRYPTION_KEY=test-encryption-key-32-characters

# Server Configuration
PORT=3000
API_PREFIX=/api/v1

# CORS
CORS_ORIGIN=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Redis Configuration (for rate limiting and caching tests)
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Email Configuration (Test)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=test-password
FROM_EMAIL=noreply@example.com
FROM_NAME=Test App

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/test/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging
LOG_LEVEL=silent
LOG_FILE=logs/test.log
ENABLE_REQUEST_LOGGING=false

# API Documentation
ENABLE_SWAGGER=false
SWAGGER_URL=/api-docs

# Performance Testing Configuration
PERFORMANCE_TESTING=false
LOAD_TEST_CONCURRENT_USERS=10
LOAD_TEST_REQUESTS_PER_SECOND=50
LOAD_TEST_DURATION_SECONDS=30

# Test Data Configuration
USE_TEST_DATA_FACTORIES=true
SEED_TEST_DATA=true
CLEANUP_TEST_DATA=true

# Multi-tenant Testing
DEFAULT_COMPANY_ID=test-company-id
TEST_COMPANY_DOMAINS=test1.example.com,test2.example.com

# Feature Flags for Testing
ENABLE_AUDIT_LOGGING=true
ENABLE_MULTI_BRANCH_SUPPORT=true
ENABLE_STAFF_SCHEDULING=true
ENABLE_INVENTORY_TRACKING=true
ENABLE_APPOINTMENT_REMINDERS=false

# External Service Mocks
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true
MOCK_PAYMENT_GATEWAY=true
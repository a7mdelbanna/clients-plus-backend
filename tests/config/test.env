# Test Environment Variables
NODE_ENV=test

# Database
DATABASE_URL=postgresql://test:test@localhost:5432/clients_plus_test

# JWT Configuration
JWT_SECRET=test-jwt-secret-for-testing-only-not-production-use-long-enough-to-be-secure
JWT_REFRESH_SECRET=test-jwt-refresh-secret-for-testing-only-not-production-use-long-enough
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=4
SESSION_SECRET=test-session-secret-for-testing-only

# Server Configuration
PORT=3000
API_PREFIX=/api/v1

# CORS
CORS_ORIGIN=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (Test)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=test-password
FROM_EMAIL=noreply@example.com
FROM_NAME=Test App

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/test/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging
LOG_LEVEL=silent
LOG_FILE=logs/test.log

# API Documentation
ENABLE_SWAGGER=false
SWAGGER_URL=/api-docs